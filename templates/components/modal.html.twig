<div {{ stimulus_controller("modal") }}>
    {% block trigger %}
        <button type="button" data-action="modal#show" class="{{ openButtonClass }}">{{ openButtonText }}</button>
    {% endblock %}

    {% block modal %}
        <div tabindex="-1" class="{{ modalClass }}" data-modal-target="modal">
            <div class="relative h-full w-full max-w-md md:h-auto">
                {% block modal_box %}
                    <div class="relative rounded-lg bg-white shadow dark:bg-gray-700">
                        <div class="flex items-center justify-between rounded-t border-b p-5 dark:border-gray-600">
                            {% block header %}
                                <h3 class="text-lg font-bold">
                                    {% block title %}
                                        {{ title }}
                                    {% endblock %}
                                </h3>
                                <button type="button"
                                    class="ml-auto inline-flex items-center rounded-lg bg-transparent p-1.5 text-sm text-gray-400 hover:bg-gray-200 hover:text-gray-900 dark:hover:bg-gray-600 dark:hover:text-white"
                                    data-modal-hide="small-modal"
                                    data-action="modal#hide">
                                    <svg aria-hidden="true" class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd"
                                            d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                                            clip-rule="evenodd"></path>
                                    </svg>
                                    <span class="sr-only">{{ "common.close"|trans }}</span>
                                </button>
                            {% endblock %}
                        </div>
                        <div class="space-y-6 p-6">
                            {% block content %}
                                <p>
                                    {{ content }}
                                </p>
                            {% endblock %}
                        </div>
                        <div class="flex items-center justify-end gap-2 space-x-2 rounded-b border-t border-gray-200 p-6 dark:border-gray-600">
                            {% block modal_action %}
                                <button type="button" data-action="modal#hide" data-modal-target="focus" class="{{ closeButtonClass }}">{{ closeButtonText }}</button>
                            {% endblock %}
                        </div>
                    </div>
                {% endblock %}
            </div>
        </div>
    {% endblock %}
</div>
