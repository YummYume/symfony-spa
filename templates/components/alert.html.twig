<div {{ stimulus_controller("notification") }}
    data-notification-delay-value="5000"
    data-transition-enter-from="opacity-0 translate-y-10"
    data-transition-enter-to="opacity-100 translate-y-0"
    data-transition-leave-from="opacity-100 translate-x-0"
    data-transition-leave-to="opacity-0 translate-x-0"
    class="alert alert--{{ type }} duration-1000 flex items-center transition mb-4 p-4 rounded-lg text-sm dark:text-white"
    role="alert"
>
    {{ component("icon", { icon: type, class: "flex-shrink-0 inline w-5 h-5 mr-3" }) }}

    <div>
        <span class="font-medium">{{ message }}</span>
    </div>
    <button class="ml-auto" data-action="notification#hide" aria-label="{{ "common.close"|trans }}">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
    </button>
</div>
