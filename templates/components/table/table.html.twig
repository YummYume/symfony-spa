<div class="overflow-x-auto w-full grow" {{ stimulus_controller("table") }}>
  <table class="table table-zebra w-full">
    <thead>
      <tr>
        {% for key, col in config.cols %}
          <th>
            {% if col.queryKey is defined %}
              {{ knp_pagination_sortable(
                config.pagination,
                col.label,
                col.queryKey,
                {},
                {},
                'knp_custom/paginator_sortable.html.twig'
              )}}
            {% else %}
              {% if key == 'actions' %}
                {{ key|upper }}
              {% else %}
                {{ col.label|upper }}
              {% endif %}
            {% endif %}
          </th>
        {% endfor %}
      </tr>
    </thead>
    <tbody>
    {% if config.pagination|length > 0 %}
      {% for value in config.pagination %}
        <tr>
          {% for key, col in config.cols %}
            {% if col.queryKey is defined %}
              {{ component(col.type, { config: { item: value, col, value: value[key] } }) }}
            {% else %}
              {% if key == 'actions' %}
                {{ component(key, { config: { actions: col, value: value.id } }) }}
              {% else %}
                {{ component(col.type, { config: { col } }) }}
              {% endif %}
            {% endif %}
          {% endfor %}
        </tr>
      {% endfor %}
    {% else %}
      <tr>
        <td class="text-center" colspan="{{ config.cols|length }}">
          {{ "table.empty"|trans({}, "table+intl-icu") }}
        </td>
      </tr>
    {% endif %}
    </tbody>
  </table>

  {% if config.cols.actions is defined %}
    <input type="checkbox" id="action-modal" class="modal-toggle" />
    <label for="action-modal" class="modal cursor-pointer">
      <label class="modal-box relative" for="">
        <label for="action-modal" class="btn btn-sm btn-circle absolute right-2 top-2">âœ•</label>
        <h3 class="text-lg font-bold" data-table-target="message"></h3>
        <div class="modal-action">
          <a data-table-target="route" href="" class="btn btn-error">{{ "table.modal.yes"|trans({}, "table+intl-icu") }}</a>
          <label for="action-modal" class="btn btn-success">{{ "table.modal.no"|trans({}, "table+intl-icu") }}</label>
        </div>
      </label>
    </label>
  {% endif %}
</div>
