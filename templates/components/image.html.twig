<img
    class="{{ class }}"
    src="{{ data_uri_thumbnail(local_asset(src), 25, 25) }}"
    {{ stimulus_controller('symfony/ux-lazy-image/lazy-image', {
        src: filter ? src|imagine_filter(filter) : src,
        srcset: dimensionSrcset is empty ? '{}' : dimensionSrcset|json_encode()
    }) }}
    alt="{{ alt }}"
    {% if width %}width="{{ width }}"{% endif %}
    {% if height %}height="{{ height }}"{% endif %}
/>
