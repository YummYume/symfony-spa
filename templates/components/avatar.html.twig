{% set picture = user.profile.picture.fileName|default(null) %}

{# <img src="{{ asset("test.jpg") }}" alt="test" /> #}
<div class="btn-ghost btn-circle btn {{ picture ? "avatar" }}">
    <div class="flex w-10 items-center justify-center rounded-full">
        {% if user|default(null) %}
            {% if picture %}
                <img src="{{ asset(picture) }}" alt="{{ "user.profile.picture"|trans({ username: user.profile.username }) }}" />
            {% else %}
                <span class="text-xl">{{ user.profile.username|u.truncate(1)|upper }}</span>
            {% endif %}
        {% else %}
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6">
                <path stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
            </svg>
        {% endif %}
    </div>
</div>
