{% extends "layout.html.twig" %}

{% block title %}
    Log in!
{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-error shadow-lg">
                {{ error.messageKey|trans(error.messageData, "security") }}
            </div>
        {% endif %}

        <h1 class="h3 font-weight-normal mb-3">
            Please sign in
        </h1>
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="input w-full max-w-xs" autocomplete="email" required autofocus />
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="input w-full max-w-xs" autocomplete="current-password" required />

        <a href="{{ path("app_forgot_password_request") }}">Forgot your password?</a>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token("authenticate") }}" />

        <div class="checkbox mb-3">
            <label><input type="checkbox" name="_remember_me" />Remember me</label>
        </div>

        <button class="btn-outline btn-primary btn" type="submit">Sign in</button>
    </form>
{% endblock %}
