{% extends "email/layout.html.twig" %}

{% block title %}
    Hi!
{% endblock %}

{% block main %}
    <p>
        To reset your password, please visit <a class="underline" href="{{ url("app_reset_password", { token: resetToken.token }) }}">this link</a>.
    </p>

    <p>
        The link will expire in {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, "ResetPasswordBundle") }}.
    </p>
{% endblock %}

{% block bottom_text %}
    Cheers!
{% endblock %}
