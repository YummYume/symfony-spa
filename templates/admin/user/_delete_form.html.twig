{% trans_default_domain "admin" %}

{% component modal
    with
    {
        title: "page.user_delete.title"|trans,
        modalId: "delete-user-modal",
        openButtonText: "common.delete"|trans,
        openButtonClass: "",
        closeButtonText: "common.go_back"|trans,
        closeButtonClass: ""
    }
%}
{% trans_default_domain "admin" %}

{% block content %}
    {{ "page.user_delete.content"|trans }} <strong>{{ "common.delete.cannot_be_undone"|trans }}</strong>
{% endblock %}

{% block modal_action %}
    {{ parent() }}
    {{ component("button", { id: "delete-user", content: "common.delete"|trans, submit: true }) }}
{% endblock %}

{% block modal_box %}
    <form method="post" action="{{ path("admin_user_delete", { id: user.id.toBase32 }) }}">
        <input type="hidden" name="_token" value="{{ csrf_token("delete-" ~ user.id.toBase32) }}" />
        {{ parent() }}
    </form>
{% endblock %}
{% endcomponent %}
