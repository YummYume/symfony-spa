{% if app.user %}
    {% component dropdown with { permanent: permanent ?? true } %}
    {% block button %}
        {% component button with { circle: true, ghost: true } %}
        {% block content %}
            {{ component("avatar", { user: app.user, permanent, id: "user-picture" }) }}
        {% endblock %}
        {% endcomponent %}
    {% endblock %}

    {% block items %}
        <li><a tabindex="0" href="{{ path("app_profile_show", { slug: app.user.profile.slug }) }}">{{ "common.my_profile"|trans }}</a></li>
        <li><a tabindex="0" href="{{ path("app_edit_profile") }}">{{ "common.account_settings"|trans }}</a></li>
        <li><a tabindex="0" href="{{ path("security_logout") }}">{{ "common.logout"|trans }}</a></li>
    {% endblock %}
    {% endcomponent %}
{% else %}
    {% component dropdown %}
    {% block button %}
        {% component button with { circle: true, ghost: true } %}
        {% block content %}
            {{ component("avatar") }}
        {% endblock %}
        {% endcomponent %}
    {% endblock %}

    {% block items %}
        <li><a tabindex="0" href="{{ path("security_login") }}">{{ "common.login"|trans }}</a></li>
        <li><a tabindex="0" href="{{ path("app_register") }}">{{ "common.register"|trans }}</a></li>
    {% endblock %}
    {% endcomponent %}
{% endif %}
